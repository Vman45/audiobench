macro Waveform(INT buffer_pos, ANY_SAMPLE phase):(value) {
    <> phase_offset = Modulator(buffer_pos, phase) * intensity[buffer_pos?];
    <> real_phase = (phase + phase_offset + 1.0) % 1.0;
    <> value = Carrier(buffer_pos, real_phase);
}

if global_update_feedback_data {
    DisplayWaveform(SetGraphFeedback, Waveform);
}